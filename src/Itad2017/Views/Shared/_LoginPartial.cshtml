@using Microsoft.AspNetCore.Identity
@using Itad2017.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a style="color: #bbb; background-color: transparent;">Witaj <strong>@UserManager.GetUserName(User)</strong> !</a>
            </li>
            <li class="dropdown">
                <a href="#" style="color: aqua; background-color: transparent;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administracja <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-action="Index" asp-controller="Participants" style="background-color: transparent; color: aqua;">Podgląd uczestników</a></li>
                    <li><a asp-action="Create" asp-controller="Participants" style="background-color: transparent; color: aqua;">Dodaj uczestnika</a></li>
                    <li><a asp-action="LogOff" asp-controller="Account" style="background-color: transparent; color: aqua;">Wyloguj się</a></li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color: aqua; background-color: transparent;">Administracja</a></li>
    </ul>
}
