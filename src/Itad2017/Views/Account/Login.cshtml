@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager

<div class="row" style="margin-top: 25vh;">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4 style="color: aqua;">Administracja</h4>
                <div class="form-group">
                    <div class="col-md-10">
                        <input Name="Email" type="text" class="form-control" placeholder="Email"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input Name="Password" type="password" class="form-control" placeholder="Hasło"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">wróć</a>
                        <button type="submit" class="btn btn-primary" style="background-color: aqua; color: black;">autoryzuj</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
