@model Itad2017.Models.Detail

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Detail</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Code" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsConfirmed" />
                    <label asp-for="IsConfirmed"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsPresent" />
                    <label asp-for="IsPresent"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RegisterTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegisterTime" class="form-control" />
                <span asp-validation-for="RegisterTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TshirtSize" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TshirtSize" class="form-control" />
                <span asp-validation-for="TshirtSize" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
