@model Itad2017.Models.Participant

<div class="row" style="margin-top: 25vh;">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-action="Index">
                <div class="form-horizontal">
                    <h4 style="color: aqua;">Rejestracja na konferencjê</h4>
                    @if (ViewBag.error != "")
                    {
                        <p style="color: #ccc;">
                            @ViewBag.error
                        </p>
                    }
                    <div class="form-group">
                        <div class="col-md-12">
                            <input asp-for="Email" class="form-control" type="text" placeholder="Email"/>
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input asp-for="FirstName" class="form-control" type="text" placeholder="Imiê"/>
                            <span asp-validation-for="FirstName" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input asp-for="SecondName" class="form-control" type="text" placeholder="Nazwisko"/>
                            <span asp-validation-for="SecondName" class="text-danger"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">wróæ</a>
                            <input type="submit" value="Zarejestruj" class="btn btn-primary" style="background-color: aqua; color: black;" />
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
