@model Itad2017.Models.Workshop
<div class="row abt-back-color" style="margin-top: 10vh;">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>Dodaj nowy warsztat</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" type="text" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" type="text" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Start" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Start" type="text" class="form-control" />
                        <span asp-validation-for="Start" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-link" style="color: aqua;">wróæ do listy warsztatów</a>
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
