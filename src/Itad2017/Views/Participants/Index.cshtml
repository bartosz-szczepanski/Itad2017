@model IEnumerable<Itad2017.Models.Participant>
<div class="row" style="padding-top: 30px;">
    <h2 style="color: #fff;">
        Podgl¹d uczestników konferencji
    </h2>
    <table class="table" style="text-align: center;">
        <thead>
            <tr>
                <th style="color: #eee; text-align: center;">
                    Id
                </th>
                <th style="color: #eee; text-align: center;">
                    Imiê i nazwisko
                </th>
                <th style="color: #eee; text-align: center;">
                    Adres Email
                </th>
                <th style="color: #eee; text-align: center;">
                    Informacje
                </th>
                <th style="color: #eee; text-align: center;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color: #ccc; border: none;">
                        @*@if (item.Details.IsPresent == true)
                        {
                            <span class="glyphicon glyphicon-ok text-user" aria-hidden="true"></span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.ID)
                        }*@
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td style="color: #ccc; border: none;">
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.SecondName)
                        @*@if (item.Details.IsConfirmed == true)
                        {
                            <span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span>
                        }*@
                    </td>
                    <td style="color: #ccc; border: none;">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="color: #ccc; border: none;">
                        @Html.DisplayFor(modelItem => item.Details.TshirtSize), 
                        @Html.DisplayFor(modelItem => item.Details.RegisterTime)
                    </td>
                    <td style="color: #ccc; border: none;">
                        <a asp-action="Edit" asp-route-id="@item.ID" style="color: aqua;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="text-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
